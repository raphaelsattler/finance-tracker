<h3>Serch for Stocks</h3>

<div id="stock-lookup">
	<%= form_tag search_stocks_path, remote: true, method: :get, id: "row stock-lookup-form" do %>
		<div class="form-group row no-padding text-center col-md-12">
			<div class="col-md-10">	
				<%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control serch-box input-lg" %>			
			</div>
			<div class="col-md-2">
				<%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
					<i class="fa fa-search"></i> Look up a stock
				<% end %>			
			</div>
		</div>
	<% end %>
</div>
<div id="results">
	<%= render 'result' %>
</div>
<%= render 'stocks/list' %> 
<% if @user_stocks.size == 0 %>
  <div class="row col-lg-12">
    <p class="lead">
      You don't have any stock tracking yet, please add some!
    </p>
  </div>
<% end %>